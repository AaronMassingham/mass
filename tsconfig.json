{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@styles/*": [
        "./styles/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@components/": [
        "./components/"
      ],
      "@hooks/*": [
        "./lib/hooks/*"
      ],
      "@constants/*": [
        "./lib/constants/*"
      ],
      "@contexts/*": [
        "./lib/contexts/*"
      ],
      "@helpers/*": [
        "./lib/helpers/*"
      ],
      "@utils/*": [
        "./lib/utils/*"
      ],
      "@typescriptTypes/*": [
        "./types/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}